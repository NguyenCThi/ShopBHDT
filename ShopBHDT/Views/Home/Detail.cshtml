@model ShopBHDT.Models.product

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/Site.css" rel="stylesheet" />
<link href="~/Content/detail.css" rel="stylesheet" />
<div class="chitietSanpham" style="min-height: 85vh">
    <h1>Điện thoại @Html.DisplayFor(model => model.name)</h1>
    <div class="rate">
        @if (Model.star == 0)
        {
            <i class="fa fa-star-half"></i>
        }
        @if (Model.star == 1)
        {
            <i class="fa fa-star"></i>
        }
        @if (Model.star == 2)
        {
            <i class="fa fa-star"></i>
            <i class="fa fa-star"></i>
        }
        @if (Model.star == 3)
        {
            <i class="fa fa-star"></i>
            <i class="fa fa-star"></i>
            <i class="fa fa-star"></i>
        }
        @if (Model.star == 4)
        {
            <i class="fa fa-star"></i>
            <i class="fa fa-star"></i>
            <i class="fa fa-star"></i>
            <i class="fa fa-star"></i>
        }
        @if (Model.star == 5)
        {
            <i class="fa fa-star"></i>
            <i class="fa fa-star"></i>
            <i class="fa fa-star"></i>
            <i class="fa fa-star"></i>
            <i class="fa fa-star"></i>
        }
        <span>@Model.rateCount</span>
    </div>
    <div class="rowdetail group">
        <div class="picture">
            <img src="@Html.DisplayFor(model => model.image)" />
        </div>
        <div class="price_sale">
            <div class="area_price">
                <strong>@Html.DisplayFor(model => model.price)</strong>
            </div>
            <div class="area_promo">
                <strong>Khuyến mãi</strong>
                <div class="promo">
                    <div class="detailPromo">

                    </div>
                </div>
            </div>
            <div class="policy">
                <div>
                    <img src="~/img/chitietsanpham/box.png">
                    <p>Trong hộp có: Sạc, Tai nghe, Sách hướng dẫn, Cây lấy sim, Ốp lưng </p>
                </div>
                <div>
                    <img src="~/img/chitietsanpham/icon-baohanh.png">
                    <p>Bảo hành chính hãng 12 tháng.</p>
                </div>
                <div class="last">
                    <img src="~/img/chitietsanpham/1-1.jpg">
                    <p>1 đổi 1 trong 1 tháng nếu lỗi, đổi sản phẩm tại nhà trong 1 ngày.</p>
                </div>
            </div>
            <div class="area_order">
                <a class="buy_now" onclick="">
                    <b><i class="fa fa-cart-plus"></i> Thêm vào giỏ hàng</b>
                    <p>Giao trong 1 giờ hoặc nhận tại cửa hàng</p>
                </a>
            </div>
        </div>
        <div class="info_product">
            <h2>Thông số kỹ thuật</h2>
            <ul class="info">
                <li>
                    <p>Màn hình</p>
                    <div>@Html.DisplayFor(model => model.screen)</div>
                </li>
                <li>
                    <p>Hệ điều hành</p>
                    <div>@Html.DisplayFor(model => model.os)</div>
                </li>
                <li>
                    <p>Camara sau</p>
                    <div>@Html.DisplayFor(model => model.camera)</div>
                </li>
                <li>
                    <p>Camara trước</p>
                    <div>@Html.DisplayFor(model => model.cameraFront)</div>
                </li>
                <li>
                    <p>CPU</p>
                    <div>@Html.DisplayFor(model => model.cpu)</div>
                </li>
                <li>
                    <p>RAM</p>
                    <div>@Html.DisplayFor(model => model.ram)</div>
                </li>
                <li>
                    <p>Bộ nhớ trong</p>
                    <div>@Html.DisplayFor(model => model.rom)</div>
                </li>
                <li>
                    <p>Thẻ nhớ</p>
                    <div>@Html.DisplayFor(model => model.chip)</div>
                </li>
                <li>
                    <p>Dung lượng pin</p>
                    <div>@Html.DisplayFor(model => model.battery)</div>
                </li>
                <li>
                    <p>Sim</p>
                    <div>@Html.DisplayFor(model => model.sim)</div>
                </li>
            </ul>
        </div>
    </div>
</div>